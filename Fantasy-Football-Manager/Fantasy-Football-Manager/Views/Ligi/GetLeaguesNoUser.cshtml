@model Fantasy_Football_Manager.Models.Liga

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<h2>Players Table</h2>
<table id="myTable" class="table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LigaId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumeLiga)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NrMaxUseri)
            </th>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{ var playersInfos = ViewData["playersInfos"] as List<Fantasy_Football_Manager.ViewModels.PlayerAllInfoDTO>;

            foreach (var item in playersInfos)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumeJucator)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PrenumeJucator)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PozitieJucator)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EchipaFotbal)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NrGoluri)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NrAssists)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NrCleansheets)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NrTotalPuncte)
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

@section Scripts{
    <script>
			$(document).ready(function () {
				$('#myTable').DataTable();//myTable is the id of the table to be displayed as dataTable
			});
    </script>
}