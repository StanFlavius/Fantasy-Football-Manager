@model Fantasy_Football_Manager.ViewModels.PlayerAllInfoDTO

@{
    ViewData["Title"] = "Index";
}

<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark mb-3">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Fantasy Football Manager</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <partial name="_LoginPartial" />
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-controller="Ligi" asp-action="GetLeaguesNoUser">Ligile comunitatii</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-light" asp-area="" asp-controller="Ligi" asp-action="GetLeaguesWithUser">Ligile mele</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<h2>Statistici Jucatori</h2>
<table id="myTable" class="table-striped table-bordered">
    <thead style="background-color:lightgrey">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NumeJucator)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PrenumeJucator)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PozitieJucator)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EchipaFotbal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NrGoluri)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NrAssists)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NrCleansheets)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NrTotalPuncte)
            </th>
        </tr>
    </thead>
    <tbody>
        @{ var playersInfos = ViewData["playersInfos"] as List<Fantasy_Football_Manager.ViewModels.PlayerAllInfoDTO>;

            foreach (var item in playersInfos)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.NumeJucator)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PrenumeJucator)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PozitieJucator)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EchipaFotbal)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NrGoluri)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NrAssists)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NrCleansheets)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NrTotalPuncte)
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

@section Scripts{
    <script>
			$(document).ready(function () {
				$('#myTable').DataTable();//myTable is the id of the table to be displayed as dataTable
			});
    </script>
}